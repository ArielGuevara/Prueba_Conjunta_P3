@model TDDTestingMVC1.Models.OpinionesCliente

@{
    ViewData["Title"] = "Detalles de la Opinión";
}

<h2>Detalles de la Opinión</h2>

<div class="form-group">
    <label class="control-label">Cliente:</label>
    <div>@Model.ClienteID</div>
</div>

<div class="form-group">
    <label class="control-label">Producto:</label>
    <div>@Model.ProductoID</div>
</div>

<div class="form-group">
    <label class="control-label">Calificación:</label>
    <div>@Model.Calificacion</div>
</div>

<div class="form-group">
    <label class="control-label">Comentario:</label>
    <div>@Model.Comentario</div>
</div>

<div class="form-group">
    <label class="control-label">Fecha:</label>
    <div>@Model.Fecha.ToShortDateString()</div>
</div>

<div class="form-group mt-3">
    <a asp-action="Edit" asp-route-id="@Model.OpinionID" class="btn btn-warning">Editar</a>
    <a asp-action="Index" class="btn btn-secondary">Volver a la lista</a>
</div>
