@model IEnumerable<TDDTestingMVC1.Models.OpinionesCliente>

@{
    ViewData["Title"] = "Administración de Opiniones de Clientes";
}

<h1 class="text-center mb-4">Administración de Opiniones de Clientes</h1>

@if (TempData["SuccessMessage"] != null)
{
    <div class="alert alert-success">
        @TempData["SuccessMessage"]
    </div>
}

<div class="card shadow-sm">
    <h5 class="card-header bg-primary text-white">
        <i class="fas fa-comments"></i> Listado de Opiniones
    </h5>

    <div class="card-body">
        <div class="text-center mt-3">
            <a asp-action="Create" class="btn btn-success btn-lg">
                <i class="fas fa-comment-medical"></i> Crear Opinión
            </a>
        </div>
        <table class="table table-striped table-hover">
            <thead class="thead-dark">
                <tr>
                    <th>@Html.DisplayNameFor(model => model.OpinionID)</th>
                    <th>@Html.DisplayNameFor(model => model.ClienteID)</th>
                    <th>@Html.DisplayNameFor(model => model.ProductoID)</th>
                    <th>@Html.DisplayNameFor(model => model.Calificacion)</th>
                    <th>@Html.DisplayNameFor(model => model.Comentario)</th>
                    <th>@Html.DisplayNameFor(model => model.Fecha)</th>
                    <th>Acciones</th>
                </tr>
            </thead>
            <tbody>
                @foreach (var item in Model)
                {
                    <tr>
                        <td>@item.OpinionID</td>
                        <td>@item.ClienteID</td>
                        <td>@item.ProductoID</td>
                        <td>@item.Calificacion</td>
                        <td>@item.Comentario</td>
                        <td>@item.Fecha.ToShortDateString()</td>
                        <td>
                            <form asp-action="Delete" asp-route-id="@item.OpinionID" method="post" class="d-inline">
                                <button type="submit" id="@item.OpinionID" class="btn btn-danger btn-sm">
                                    <i class="fas fa-trash-alt"></i> Eliminar
                                </button>
                            </form>
                            <a asp-action="Edit" asp-route-id="@item.OpinionID" class="btn btn-warning btn-sm">
                                <i class="fas fa-pencil-alt"></i> Editar
                            </a>
                            <a asp-action="Details" asp-route-id="@item.OpinionID" class="btn btn-gray btn-sm">
                                <i class="fas fa-eye"></i> Detalles
                            </a>
                        </td>
                    </tr>
                }
            </tbody>
        </table>
    </div>
</div>
